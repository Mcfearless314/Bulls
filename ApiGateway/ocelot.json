{
  "Routes": [
    {
      "UpstreamPathTemplate": "/vault",
      "UpstreamHttpMethod": [
        "Post"
      ],
      "DownstreamPathTemplate": "/vault/credentials",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication-service-api",
          "Port": 8080
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/auth",
      "UpstreamHttpMethod": [
        "Post"
      ],
      "DownstreamPathTemplate": "/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authentication-service-api",
          "Port": 8080
        }
      ]
    },
    {
      "UpstreamPathTemplate": "/api/order",
      "UpstreamHttpMethod": [
        "Post"
      ],
      "DownstreamPathTemplate": "/api/order/createorder",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "order-service",
          "Port": 8080
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": [
          "bulls_management_service"
        ]
      }
    }
  ]
}